<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/circularbordersolid"
    android:paddingTop="@dimen/spacing_mlarge"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/btnclosehomelist"
        android:layout_width="wrap_content"
        android:layout_gravity="right"
        android:layout_marginEnd="@dimen/_43sdp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_close_24"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_large">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/profilefragmentimage"
            android:layout_width="@dimen/spacing_xxlarge"
            android:layout_height="@dimen/spacing_xxlarge"
            android:src="@drawable/user_image"
            app:civ_shadow="true"
            app:civ_shadow_radius="0"
            app:civ_border="false" />

        <View
            android:layout_width="@dimen/spacing_large"
            android:layout_height="0dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/profilefragmentname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="David Park"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/grey_90"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_small"
                android:gravity="center_vertical">

                <View
                    android:layout_width="@dimen/spacing_medium"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/profilefragmentemail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Public"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:scrollbars="none"
            android:scrollingCache="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/circularbordersolid"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="25dp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/EditText.Flat.Grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingRight="@dimen/spacing_middle"
                                android:text="Name"
                                android:textColor="@android:color/black" />
                            <TextView
                                android:id="@+id/profilename"
                                style="@style/EditText.Flat.Grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10"
                                android:layout_gravity="start"
                                android:gravity="center"
                                android:background="@drawable/edit_text_round_bg_outline"
                                android:minHeight="@dimen/spacing_xmlarge"
                                android:paddingRight="@dimen/spacing_middle"
                                android:text="Roberts Turner"
                                android:textColor="@android:color/black" />

                            <TextView
                                style="@style/EditText.Flat.Grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10"
                                android:paddingRight="@dimen/spacing_middle"
                                android:text="Email"
                                android:textColor="@android:color/black" />
                            <TextView
                                android:id="@+id/profileemail"
                                style="@style/EditText.Flat.Grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/padding_10"
                                android:background="@drawable/edit_text_round_bg_outline"
                                android:minHeight="@dimen/spacing_xmlarge"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:paddingRight="@dimen/spacing_middle"
                                android:text="roberts.turner"
                                android:textColor="@android:color/black" />

                            <TextView
                                style="@style/EditText.Flat.Grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10"
                                android:paddingRight="@dimen/spacing_middle"
                                android:text="Phone Number"
                                android:textColor="@android:color/black" />
                            <TextView
                                android:id="@+id/profilephonenumber"
                                style="@style/EditText.Flat.Grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10"
                                android:layout_gravity="start"
                                android:gravity="center"
                                android:background="@drawable/edit_text_round_bg_outline"
                                android:minHeight="@dimen/spacing_xmlarge"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:paddingRight="@dimen/spacing_middle"
                                android:text="******"
                                android:textColor="@android:color/black" />

                            <TextView
                                style="@style/EditText.Flat.Grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10"
                                android:paddingRight="@dimen/spacing_middle"
                                android:text="House Phone Number"
                                android:textColor="@android:color/black" />
                            <TextView
                                android:id="@+id/profilehomephonenumber"
                                style="@style/EditText.Flat.Grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10"
                                android:layout_gravity="start"
                                android:gravity="center"
                                android:background="@drawable/edit_text_round_bg_outline"
                                android:minHeight="@dimen/spacing_xmlarge"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:paddingRight="@dimen/spacing_middle"
                                android:text="roberts.turner@mail.com"
                                android:textColor="@android:color/black" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">
                                    <TextView
                                        style="@style/EditText.Flat.Grey"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/padding_10"
                                        android:paddingRight="@dimen/spacing_middle"
                                        android:text="Room Number"
                                        android:textColor="@android:color/black" />
                                    <TextView
                                        android:id="@+id/profileroomnumber"
                                        style="@style/EditText.Flat.Grey"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:layout_gravity="start"
                                        android:gravity="center"
                                        android:background="@drawable/edit_text_round_bg_outline"
                                        android:editable="false"
                                        android:layout_marginTop="@dimen/padding_10"
                                        android:focusable="false"
                                        android:minHeight="@dimen/spacing_xmlarge"
                                        android:paddingLeft="@dimen/spacing_middle"
                                        android:paddingRight="@dimen/spacing_middle"
                                        android:text="29 y.o"
                                        android:textColor="@android:color/black" />
                                </LinearLayout>
                                <View
                                    android:layout_width="@dimen/spacing_large"
                                    android:layout_height="0dp" />
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        style="@style/EditText.Flat.Grey"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/padding_10"
                                        android:paddingRight="@dimen/spacing_middle"
                                        android:text="Joining date"
                                        android:textColor="@android:color/black" />
                                    <TextView
                                        android:id="@+id/profiledate"
                                        style="@style/EditText.Flat.Grey"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:background="@drawable/edit_text_round_bg_outline"
                                        android:editable="false"
                                        android:layout_gravity="start"
                                        android:gravity="center"
                                        android:layout_marginTop="@dimen/padding_10"
                                        android:focusable="false"
                                        android:minHeight="@dimen/spacing_xmlarge"
                                        android:paddingLeft="@dimen/spacing_middle"
                                        android:paddingRight="@dimen/spacing_middle"
                                        android:text="Male"
                                        android:textColor="@android:color/black" />
                                </LinearLayout>
                            </LinearLayout>
                            <TextView
                                style="@style/EditText.Flat.Grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10"
                                android:paddingRight="@dimen/spacing_middle"
                                android:text="Address"
                                android:textColor="@android:color/black" />
                            <TextView
                                android:id="@+id/profileaddress"
                                style="@style/EditText.Flat.Grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10"
                                android:background="@drawable/edit_text_round_bg_outline"
                                android:editable="false"
                                android:layout_gravity="start"
                                android:gravity="center"
                                android:focusable="false"
                                android:minHeight="@dimen/spacing_xmlarge"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:paddingRight="@dimen/spacing_middle"
                                android:text="United State"
                                android:textColor="@android:color/black" />
                            <TextView
                                style="@style/EditText.Flat.Grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10"
                                android:paddingRight="@dimen/spacing_middle"
                                android:text="Adhaar cared Number"
                                android:textColor="@android:color/black" />
                            <TextView
                                android:id="@+id/profilesadharrcarennumber"
                                style="@style/EditText.Flat.Grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10"
                                android:background="@drawable/edit_text_round_bg_outline"
                                android:editable="false"
                                android:layout_gravity="start"
                                android:gravity="center"
                                android:focusable="false"
                                android:minHeight="@dimen/spacing_xmlarge"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:paddingRight="@dimen/spacing_middle"
                                android:text="United State"
                                android:textColor="@android:color/black" />

                            <TextView
                                style="@style/EditText.Flat.Grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10"
                                android:paddingRight="@dimen/spacing_middle"
                                android:text="Village"
                                android:textColor="@android:color/black" />
                            <TextView
                                android:id="@+id/profilevillage"
                                style="@style/EditText.Flat.Grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10"
                                android:background="@drawable/edit_text_round_bg_outline"
                                android:editable="false"
                                android:layout_gravity="start"
                                android:gravity="center"
                                android:focusable="false"
                                android:minHeight="@dimen/spacing_xmlarge"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:paddingRight="@dimen/spacing_middle"
                                android:text="United State"
                                android:textColor="@android:color/black" />


                            <TextView
                                style="@style/EditText.Flat.Grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10"
                                android:paddingRight="@dimen/spacing_middle"
                                android:text="District"
                                android:textColor="@android:color/black" />


                            <TextView
                                android:id="@+id/profiledistrict"
                                style="@style/EditText.Flat.Grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10"
                                android:background="@drawable/edit_text_round_bg_outline"
                                android:editable="false"
                                android:layout_gravity="start"
                                android:gravity="center"
                                android:focusable="false"
                                android:minHeight="@dimen/spacing_xmlarge"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:paddingRight="@dimen/spacing_middle"
                                android:text="United State"
                                android:textColor="@android:color/black" />

                            <TextView
                                style="@style/EditText.Flat.Grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10"
                                android:paddingRight="@dimen/spacing_middle"
                                android:text="Postcode"
                                android:textColor="@android:color/black" />
                            <TextView
                                android:id="@+id/profilepostcode"
                                style="@style/EditText.Flat.Grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10"
                                android:background="@drawable/edit_text_round_bg_outline"
                                android:editable="false"
                                android:layout_gravity="start"
                                android:gravity="center"
                                android:focusable="false"
                                android:minHeight="@dimen/spacing_xmlarge"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:paddingRight="@dimen/spacing_middle"
                                android:text="United State"
                                android:textColor="@android:color/black" />


                            <TextView
                                style="@style/EditText.Flat.Grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10"
                                android:paddingRight="@dimen/spacing_middle"
                                android:text="State"
                                android:textColor="@android:color/black" />
                            <TextView
                                android:id="@+id/profilestate"
                                style="@style/EditText.Flat.Grey"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/padding_10"
                                android:background="@drawable/edit_text_round_bg_outline"
                                android:editable="false"
                                android:layout_gravity="start"
                                android:gravity="center"
                                android:focusable="false"
                                android:minHeight="@dimen/spacing_xmlarge"
                                android:paddingLeft="@dimen/spacing_middle"
                                android:paddingRight="@dimen/spacing_middle"
                                android:text="United State"
                                android:textColor="@android:color/black" />



                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_middle"
                                android:background="@drawable/edit_text_round_bg_outline"
                                android:gravity="center_vertical"
                                android:orientation="horizontal"
                                >

                                <RelativeLayout
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@color/grey_3">

                                    <ImageView
                                        android:id="@+id/profileadharfrend"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_centerInParent="true"
                                         app:srcCompat="@drawable/ic_photo" />

                                </RelativeLayout>

                                <TextView
                                    style="@style/EditText.Flat.Grey"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/padding_10"
                                    android:paddingRight="@dimen/spacing_middle"
                                    android:text="Proof Fren Side"
                                    android:textColor="@android:color/black" />

                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_middle"
                                android:background="@drawable/edit_text_round_bg_outline"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <RelativeLayout
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:background="@color/grey_3">

                                    <ImageView
                                        android:id="@+id/profileadharback"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_centerInParent="true"
                                         app:srcCompat="@drawable/ic_photo" />

                                </RelativeLayout>

                                <TextView
                                    style="@style/EditText.Flat.Grey"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_marginTop="@dimen/padding_10"
                                    android:paddingRight="@dimen/spacing_middle"
                                    android:text="Proof Fren Side"
                                    android:textColor="@android:color/black" />

                            </LinearLayout>

                        </LinearLayout>

                        <androidx.core.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/toolbar"
                            android:layout_weight="1"
                            android:clipToPadding="false"
                            android:padding="@dimen/spacing_mlarge"
                            android:scrollbars="none"
                            android:scrollingCache="true"
                            app:layout_behavior="@string/appbar_scrolling_view_behavior">



                        </androidx.core.widget.NestedScrollView>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end|right"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_mic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_middle"
                android:clickable="true"
                android:tint="@color/grey_80"
                app:backgroundTint="@color/grey_20"
                app:fabSize="mini"
                app:rippleColor="@android:color/white"
                app:srcCompat="@drawable/ic_menu" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_middle"
                android:clickable="true"
                android:tint="@color/grey_80"
                app:backgroundTint="@color/grey_20"
                app:fabSize="mini"
                app:rippleColor="@android:color/white"
                app:srcCompat="@drawable/ic_phone_24" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_smlarge"
                android:layout_marginLeft="@dimen/spacing_smlarge"
                android:layout_marginRight="@dimen/spacing_smlarge"
                android:layout_marginTop="@dimen/spacing_middle"
                android:clickable="true"
                android:backgroundTint="@color/blue_A700"
                android:tint="@android:color/white"
                app:fabSize="normal"
                app:rippleColor="@android:color/white"
                app:srcCompat="@drawable/ic_add_24" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/blue_A700"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/bt_submit"
            android:text="APPROVE"
            android:textColor="@color/wite"
            android:layout_gravity="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Headline"
            android:textAlignment="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tint="@color/blue_A700" />

    </LinearLayout>

</LinearLayout>